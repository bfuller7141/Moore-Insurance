<div class="newsletter-container">
    <!-- Title -->
    <div class="body-regular"><strong>Subscribe</strong></div>
  
    <!-- Form -->
<form
  name="newsletter"
  method="POST"
  data-netlify="true"
  netlify-honeypot="bot-field"
  class="newsletter-form"
>
  <!-- Required hidden input for Netlify -->
  <input type="hidden" name="form-name" value="newsletter" />

  <!-- Honeypot -->
  <p class="hidden">
    <label>Donâ€™t fill this out if you're human:
      <input name="bot-field" />
    </label>
  </p>

  <label for="newsletter-email" class="sr-only">Email Address</label>
  <input
    type="email"
    id="newsletter-email"
    name="email"
    placeholder="john.doe@email.com"
    required
  />
  <button type="submit" aria-label="Subscribe">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 19.54 32.24"
      width="1.25rem"
      height="1.25rem"
      preserveAspectRatio="xMidYMid meet"
    >
      <path d="M3.42 0 L0 3.42 L12.62 16.12 L0 28.81 L3.42 32.24 L19.54 16.12 Z" fill="currentColor"/>
    </svg>
  </button>
</form>

  
  <style>
    .hidden {
      display: none;
    }
    
    .newsletter-container {
      display: flex;
      flex-direction: column;
      width: 100%;
    }
  
    .sr-only {
      position: absolute !important;
      width: 1px; 
      height: 1px; 
      padding: 0; 
      margin: -1px; 
      overflow: hidden; 
      clip: rect(0,0,0,0); 
      border: 0;
    }
  
    .newsletter-form {
      display: flex;
      align-items: flex-start;
      gap: 0;
    }
  
    .newsletter-form input[type="email"] {
      flex: 1 1 auto;
      padding: 0.75rem 1rem;
      border: none;
      border-radius: 0.5rem;
      font-size: 1rem;
      box-sizing: border-box;
      background-color: #fff;
      color: #000;
      height: 2.75rem;
      margin-bottom: 1rem;
      outline: 2px solid transparent;
      transition: all 0.3s ease-in-out;
    }
    .newsletter-form input[type="email"]:hover {
      outline: 2px solid var(--primary-300);
      transition: all 0.1s ease-in-out;
    }
    .newsletter-form input[type="email"]:focus {
      outline: 2px solid var(--primary-300);
      transition: all 0.1s ease-in-out;
    }
  
    .newsletter-form button {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      border: none;
      with: 2.75rem;
      height: 2.75rem;
      padding: 0 1rem;
      border-radius: 0.5rem;
      cursor: pointer;
      margin: 0 0 0 0.75rem;
      transition: background-color 0.3s ease;
    }


    .newsletter-disclaimer {
      margin: 0;
      line-height: 1.4;
      opacity: 0.9;
    }
  </style>
  
  <script>
    const form = document.querySelector('.newsletter-form');
  
    form.addEventListener('submit', async function (event) {
      event.preventDefault();
  
      const formData = new FormData(form);
      const encodedData = new URLSearchParams(formData).toString();
  
      try {
        const response = await fetch('/', {
          method: 'POST',
          headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
          body: encodedData,
        });
  
        if (response.ok) {
          form.style.display = 'none';
  
          const successMsg = document.createElement('div');
          successMsg.className = 'newsletter-success';
          successMsg.setAttribute('role', 'status');
          successMsg.innerHTML = `
            <p class="body-regular"><strong>Thank you for subscribing!</strong></p>
            <p class="body-sm">We will send you updates and valuable tips shortly.</p>
          `;
  
          form.parentNode.appendChild(successMsg);
        } else {
          throw new Error('Form submission failed');
        }
      } catch (error) {
        alert('Something went wrong. Please try again.');
        console.error(error);
      }
    });
  </script>
  