<form
  name="business-coverage-quote"
  method="POST"
  data-netlify="true"
  netlify-honeypot="bot-field"
  class="quote-form"
>
  <!-- Netlify form requirements -->
  <input type="hidden" name="form-name" value="business-coverage-quote" />
  <input
    type="hidden"
    name="subject"
    id="subjectInput"
    value="Business Coverage Quote Request"
  />

  <!-- Honeypot field -->
  <p class="hidden">
    <label>Donâ€™t fill this out if you're human:
      <input name="bot-field" />
    </label>
  </p>

  <h2 class="form-title">
    Get Your <span class="highlight">Business</span> Quote
  </h2>

  <!-- Row 1: Business Name + Contact Email -->
  <div class="form-row two-col">
    <div>
      <label for="businessName">Business Name</label>
      <input
        type="text"
        id="businessName"
        name="businessName"
        placeholder="Acme Corp"
        required
      />
    </div>
    <div>
      <label for="contactEmail">Contact Email</label>
      <input
        type="email"
        id="contactEmail"
        name="contactEmail"
        placeholder="contact@acme.com"
        required
      />
    </div>
  </div>

  <!-- Row 2: Address, City, State -->
  <div class="form-row three-col">
    <div>
      <label for="address">Address</label>
      <input
        type="text"
        id="address"
        name="address"
        placeholder="123 Business Road"
        required
      />
    </div>
    <div>
      <label for="city">City</label>
      <input
        type="text"
        id="city"
        name="city"
        placeholder="Phoenix"
        required
      />
    </div>
    <div>
      <label for="state">State</label>
      <input
        type="text"
        id="state"
        name="state"
        placeholder="Arizona"
        required
      />
    </div>
  </div>

  <!-- Row 3: Business Type (Industry) -->
  <div class="form-row">
    <label for="industry">Industry / Business Type</label>
    <input
      type="text"
      id="industry"
      name="industry"
      placeholder="e.g., Retail, Manufacturing, Technology"
      required
    />
  </div>

  <!-- Row 4: Coverage Options (two columns for checkboxes) -->
  <div class="form-row coverage-section">
    <p>Which coverages are you interested in?</p>
    <div class="coverage-grid">
      <label>
        <input type="checkbox" name="coverage" value="General Liability" />
        General Liability
      </label>
      <label>
        <input type="checkbox" name="coverage" value="Commercial Auto" />
        Commercial Auto
      </label>
      <label>
        <input type="checkbox" name="coverage" value="Commercial Property" />
        Commercial Property
      </label>
      <label>
        <input type="checkbox" name="coverage" value="Workers Comp" />
        Workers Comp
      </label>
      <label>
        <input type="checkbox" name="coverage" value="Commercial Umbrella" />
        Commercial Umbrella
      </label>
      <label>
        <input type="checkbox" name="coverage" value="Cyber Insurance" />
        Cyber Insurance
      </label>
    </div>
  </div>

  <!-- Row 5: Additional Details -->
  <div class="form-row">
    <label for="details">Additional Details</label>
    <textarea
      id="details"
      name="details"
      rows="4"
      placeholder="Please provide any additional details..."
    ></textarea>
  </div>

  <!-- Row 6: Submit Button -->
  <div class="form-row">
    <button type="submit" class="btn">Submit</button>
  </div>
</form>

<script>
  // Dynamically update subject field based on Business Name
  document.getElementById("businessName").addEventListener("input", function () {
    const nameValue = this.value.trim();
    const subjectInput = document.getElementById("subjectInput");
    subjectInput.value = "Business Coverage Quote Request from " + nameValue;
  });
</script>

