---
import BaseHead from "../components/BaseHead.astro";
import SkipMain from "../components/SkipMain.astro";
import NavMain from "../components/NavMain.astro";
import AnimatedHeadline from "../components/Animations/AnimatedHeadline";
import FadeInUp from "../components/Animations/FadeInUp";
import ServiceGrid from "../components/ServiceGrid.astro";
import FormAuto from "../components/FormAuto.astro";
import FooterMain from "../components/FooterMain.astro";
---

<!DOCTYPE html>
<html lang="en">
  <BaseHead
    title="Auto Coverage"
    description="Get Your Auto Coverage Quote"
    keywords="insurance, auto, vehicle, coverage, quote"
    image="https://moore-insurance.com/images/og-auto.jpg"
  />
  <body>
    <SkipMain />
    <header>
      <NavMain />
    </header>
    <main>
      <!-- Hero Section -->
      <section class="hero-sub" role="banner">
        <div class="padding-hero">
          <div class="container">
            <div class="wrapper-hero">
              <AnimatedHeadline client:load>
                <h1 class="page-title">Auto <span class="highlight">Coverage</span></h1>
              </AnimatedHeadline>
              <FadeInUp delay={0.5} duration={1} client:load>
                <div class="wrapper-short">
                  <p class="body-regular">
                    Secure your ride with tailored auto insurance solutions. Whether you're covering a car, motorcycle, or truck, we help you find the right protection at the best value.
                  </p>
                  <div class="wrapper-btn">
                    <a class="btn">Get A Quote</a>
                    <a class="btn secondary">Our Services</a>
                  </div>
                </div>
              </FadeInUp>
            </div>
          </div>
        </div>
      </section>

      <!-- Auto Services Grid -->
      <FadeInUp delay={0.125} duration={1} client:load>
        <section>
          <div class="padding-section">
            <div class="container">
              <div class="wrapper-center">
                <h2 class="section-title">
                  Auto Insurance Options
                </h2>
              </div>
              <ServiceGrid categoryFilter="Auto Coverage" />
              <div class="wrapper-btn center">
                <a class="btn">Get a Quote</a>
              </div>
            </div>
          </div>
        </section>
      </FadeInUp>

      <!-- Explanation Section -->
      <FadeInUp delay={0.125} duration={1} client:load>
        <section>
          <div class="padding-section">
            <div class="container">
              <div class="wrapper-center">
                <h2 class="section-title center">
                  What is <span class="highlight">Auto</span> Coverage?
                </h2>
                <p class="body-regular center">
                  Auto coverage protects your vehicle against damage, theft, accidents, and liability. Our policies are designed to fit your specific vehicle type and usage needs, ensuring youâ€™re covered on the road.
                </p>
              </div>
            </div>
          </div>
        </section>
      </FadeInUp>

      <!-- Auto Coverage Quote Form -->
      <FadeInUp delay={0.125} duration={1} client:load>
        <section>
          <div class="padding-section lg-bottom">
            <div class="container">
              <FormAuto />
            </div>
          </div>
        </section>
      </FadeInUp>
    </main>
    <FooterMain />
  </body>
</html>
